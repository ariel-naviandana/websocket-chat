{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",  // Ubah rootDir ke . untuk mencakup seluruh proyek
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "helpers/**/*", "models/**/*", "migrations/**/*", "seeders/**/*"]
}