{
  "name": "websocket-chat",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/views/**/* dist/src && copyfiles -u 1 config/**/* dist/config",
    "start": "node dist/src/index.js",
    "migrate": "npx sequelize-cli db:migrate",
    "drop": "npx sequelize-cli db:drop",
    "seed": "npx sequelize-cli db:seed:all"
  },
  "dependencies": {
    "awilix": "^12.0.4",
    "awilix-express": "^9.0.2",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "log4js": "^6.9.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.12.0",
    "@types/sequelize": "^4.28.20",
    "@types/winston": "^2.4.4",
    "copyfiles": "^2.4.1",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "sequelize": {
    "config": "config/config.json",
    "options": {
      "require": "ts-node/register"
    }
  }
}
